<style>

    body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        background-color: #D9D9D9;
    }

    .container {
        flex: 1;
    }

    .logo {
        width: 130px;
        height: auto;
        object-fit: cover;
    }

    footer {
        width: 100%;
        position: fixed;
        bottom: 0;
