@model ProdutoModel

@{
    Layout = null;
}
<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<script src="https://code.jquery.com/jquery-3.6.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
<style>
    .navbar {
        display: flex;
        justify-content: flex-start;
        gap: 20px;
        padding-left: 5px;
    }

    .form {
        padding-left: 5px;
    }

    .lbcolor {
        color: black;
        font-weight: 600;
    }

    .btn-secondary {
        background-color: #D9D9D9;
        color: black;
        font-weight: 600;
        border: none;
    }

    body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        background-color: #D9D9D9;
    }

    .container {
        flex: 1;
    }

    footer {
        width: 100%;
        position: fixed;
        bottom: 0;
        left: 0;
        background-color: #D9D9D9;
        text-align: center;
        padding: 10px 0;
    }

    span {
        color: black;
        font-weight: 600;
    }

    .logo {
        width: 130px;
        height: auto;
        object-fit: cover;
    }

</style>
<header style=" background-color: #D9D9D9;">
    <div class="container">
        <a class="navbar-brand custom-link custom-bold" asp-area="" asp-controller="Home" asp-action="Index">

            <img src="~/images/LogoSige.png" alt="Logo do Sistema de Vendas" class="logo">

            Sige Sistema de Vendas
        </a>
    </div>
</header>
<div class="container bg-body-tertiary">
    

    <div class="form ">
        <form method ="post" asp-controller="Produto" asp-action="CadastroProdutoManutencao">
            <nav class="navbar bg-body-tertiary">
                <button type="button" class="btn btn-secondary" onclick="window.location.href='@Url.Action("Index", "Produto")'">Voltar</button>
                <button type="submit" class="btn btn-secondary">Salvar</button>
            </nav>
            <!-- Seção para exibir mensagens -->
            @if (TempData.ContainsKey("MensagemErro") || TempData.ContainsKey("MensagemSucesso"))
            {
                <div id="mensagem" class="alert alert-dismissible fade show" role="alert">
                    @if (TempData.ContainsKey("MensagemErro"))
                    {
                        <div class="alert alert-danger" role="alert">
                            @TempData["MensagemErro"]
                        </div>
                    }

                    @if (TempData.ContainsKey("MensagemSucesso"))
                    {
                        <div class="alert alert-success" role="alert">
                            @TempData["MensagemSucesso"]
                        </div>
                    }

                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>

                <script>
                    // Fechar a mensagem automaticamente após 5 segundos
                    setTimeout(function () {
                        $('#mensagem').alert('close');
                    }, 5000);
                </script>
            }
            <div class="row">
                <div class="mb-3 col-5">
                    <label for="NomeDoProduto" class="form-label lbcolor">Produto</label>
                    <input type="text" class="form-control" id="NomeDoProduto" asp-for="NomeDoProduto">
                </div>
                <div class="mb-3 col-2">
                    <label for="Marca" class="form-label lbcolor">Marca</label>
                    <input type="text" class="form-control" id="Marca" asp-for="Marca">
                </div>
                <div class="mb-3 col-2">
                    <label for="CodigoProduto" class="form-label lbcolor">Codigo Produto</label>
                    <input type="text" class="form-control" id="CodigoProduto" asp-for="CodigoProduto">
                </div>
                <div class="mb-3 col-2">
                    <label for="Preco" class="form-label lbcolor">Preço Unitario</label>
                    <input type="text" class="form-control" id="Preco" asp-for="Preco">
                </div>

            </div>

            <div class="row">
                <div class="mb-3 col-5">
                    <label for="Descricao" class="form-label lbcolor">Descrição</label>
                    <input type="text" class="form-control" id="Descricao" asp-for="Descricao">
                </div>
                <div class="mb-3 col-2">
                    <label for="DataCadastro" class="form-label lbcolor">DT Cadastro</label>
                    <input type="date" class="form-control" id="DataCadastro" asp-for="DataCadastro">
                </div>
                <div class="mb-3 col-2">
                    <label for="Quantidade" class="form-label lbcolor">Quantidade</label>
                    <input type="text" class="form-control" id="Quantidade" asp-for="Quantidade">
                </div>
            </div>
            <input type="hidden" id="NrSeqProduto" name="NrSeqProduto" asp-for="NrSeqProduto" />
        </form>

        
    </div>
</div>


<footer class="border-top footer text-muted" style=" background-color: #D9D9D9;">
    <div class="container">
        &copy; 2023 -Sige Sistema de Vendas - Privacy</a>
    </div>
</footer>


